{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "./handlers",
    "rootDir": "./src",
    "types": ["node","jest"],
    "lib": [
      "es2015",
      "dom",
      "es2020.string"
    ]
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "node_modules/@types/jest/index.d.ts"
  ]
}
